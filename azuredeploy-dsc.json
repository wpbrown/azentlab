{
    "$schema": "https://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "adminPassword": {
            "type": "securestring",
            "metadata": {
                "description": "Password for the domain admin (xoda) and local admins (localadmin)."
            }
        },
        "userPassword": {
            "type": "securestring",
            "metadata": {
                "description": "Password for the standard users and service accounts."
            }
        },
        "domainName": {
            "type": "string",
            "defaultValue": "contoso.com",
            "metadata": {
                "description": "Name of the lab AD DS domain."
            }
        },
        "domainNetbiosName": {
            "type": "string",
            "defaultValue": "contoso",
            "metadata": {
                "description": "Netbios name of the lab AD DS domain."
            }
        },
        "azureAdTenantName": {
            "type": "string",
            "defaultValue": "contoso",
            "metadata": {
                "description": "Name of the Azure AD tenant (the value before .onmicrosoft.com)."
            }
        },
        "compileJobName": {
            "type": "string",
            "metadata": {
                "description": "Name of the DSC configuration compile job."
            }
        },
        "_artifactsLocation": {
            "type": "string",
            "defaultValue": "https://raw.githubusercontent.com/wpbrown/azentlab/master"
        },
        "_artifactsLocationSasToken": {
            "type": "string",
            "defaultValue": ""
        }
    },
    "variables": {},
    "resources": [
        {
            "type": "Microsoft.Automation/automationAccounts",
            "apiVersion": "2015-10-31",
            "name": "lab-aa",
            "location": "[resourceGroup().location]",
            "properties": {
                "sku": {
                    "name": "Basic"
                }
            },
            "resources": [
                {
                    "type": "credentials",
                    "apiVersion": "2015-10-31",
                    "name": "domainadmin",
                    "location": "[resourceGroup().location]",
                    "dependsOn": [
                        "lab-aa"
                    ],
                    "properties": {
                        "userName": "[concat(parameters('domainNetbiosName'), '\\xoda')]",
                        "description": "Credential for the domain admin (xoda).",
                        "password": "[parameters('adminPassword')]"
                    }
                },
                {
                    "type": "credentials",
                    "apiVersion": "2015-10-31",
                    "name": "domainuser",
                    "location": "[resourceGroup().location]",
                    "dependsOn": [
                        "lab-aa"
                    ],
                    "properties": {
                        "userName": "any",
                        "description": "Password for the standard users and service accounts.",
                        "password": "[parameters('userPassword')]"
                    }
                },
                {
                    "name": "xActiveDirectory",
                    "type": "modules",
                    "apiVersion": "2018-01-15",
                    "location": "[resourceGroup().location]",
                    "dependsOn": [
                        "lab-aa"
                    ],
                    "properties": {
                        "contentLink": {
                            "uri": "https://devopsgallerystorage.blob.core.windows.net/packages/xactivedirectory.2.25.0.nupkg"
                        }
                    }
                },
                {
                    "name": "ComputerManagementDSC",
                    "type": "modules",
                    "apiVersion": "2018-01-15",
                    "location": "[resourceGroup().location]",
                    "dependsOn": [
                        "lab-aa"
                    ],
                    "properties": {
                        "contentLink": {
                            "uri": "https://devopsgallerystorage.blob.core.windows.net/packages/computermanagementdsc.6.3.0.nupkg"
                        }
                    }
                },
                {
                    "name": "PSDscresources",
                    "type": "modules",
                    "apiVersion": "2018-01-15",
                    "location": "[resourceGroup().location]",
                    "dependsOn": [
                        "lab-aa"
                    ],
                    "properties": {
                        "contentLink": {
                            "uri": "https://devopsgallerystorage.blob.core.windows.net/packages/psdscresources.2.10.0.nupkg"
                        }
                    }
                },
                {
                    "type": "configurations",
                    "apiVersion": "2015-10-31",
                    "name": "AzEntLabConfiguration",
                    "location": "[resourceGroup().location]",
                    "dependsOn": [
                        "lab-aa",
                        "xActiveDirectory",
                        "ComputerManagementDSC",
                        "PSDscresources"
                    ],
                    "properties": {
                        "source": {
                            "type": "uri",
                            "value": "[concat(parameters('_artifactsLocation'), '/azentlabconfiguration.ps1', parameters('_artifactsLocationSasToken'))]",
                            "version": "1"
                        }
                    }
                },
                {
                    "type": "compilationjobs",
                    "apiVersion": "2018-01-15",
                    "name": "[parameters('compileJobName')]",
                    "location": "[resourceGroup().location]",
                    "dependsOn": [
                        "lab-aa",
                        "AzEntLabConfiguration"
                    ],
                    "properties": {
                        "configuration": {
                            "name": "AzEntLabConfiguration"
                        },
                        "parameters": {
                            "AdminPassword": "domainadmin",
                            "UserPassword": "domainuser",
                            "DomainName": "[parameters('domainName')]",
                            "DomainNetbiosName": "[parameters('domainNetbiosName')]"
                        }
                    }
                }
            ]
        }
    ],
    "outputs": {}
}